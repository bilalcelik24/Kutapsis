<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".screen.activity.MainActivity">

    <TextView
        android:id="@+id/txtViewProfilUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kullanıcı Adı"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.221"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16" />

    <EditText
        android:id="@+id/editProfilUserName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/custom_edittext"
        app:layout_constraintStart_toStartOf="@+id/txtViewProfilUserName"
        app:layout_constraintTop_toBottomOf="@+id/txtViewProfilUserName" />

    <TextView
        android:id="@+id/txtViewProfilAdres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Adres"
        app:layout_constraintStart_toStartOf="@+id/editProfilUserName"
        app:layout_constraintTop_toBottomOf="@+id/editProfilUserName" />

    <EditText
        android:id="@+id/editProfilAdres"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/custom_edittext"
        app:layout_constraintStart_toStartOf="@+id/txtViewProfilAdres"
        app:layout_constraintTop_toBottomOf="@+id/txtViewProfilAdres" />

    <Button
        android:id="@+id/bttnProfilKaydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Kaydet"
        android:background="@drawable/custom_button"
        app:layout_constraintStart_toStartOf="@+id/editProfilAdres"
        app:layout_constraintTop_toBottomOf="@+id/editProfilAdres" />
</androidx.constraintlayout.widget.ConstraintLayout>